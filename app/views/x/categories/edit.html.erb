<div class="box">
  <h2 class="box-title">Edit category</h2>
  <div class="row">
    <div class="col-md-12">
			<%= simple_form_for @category, url: x_category_path, method: :put do |f| %>
				<%= render "common/error", object: @category %>
				<%= f.input :title %>
				<%= f.button :submit, "Submit", data: { disable_with: "Sending" } %>
	    <% end %>
	    <div class="clearfix"></div>
    </div>
  </div>
</div>

