<div class="box">
  <h2 class="box-title">Edit source</h2>
  <div class="row">
    <div class="col-md-12">
			<%= simple_form_for @source, url: x_indicator_source_path(@source) do |f| %>
				<%= render "common/error", object: @source %>
				<%= render "form", f: f %>
				<%= f.button :submit, "Submit", data: { disable_with: "Sending" } %>
	    <% end %>
	    <div class="clearfix"></div>
    </div>
  </div>
</div>

